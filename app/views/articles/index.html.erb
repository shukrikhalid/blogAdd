    <!-- Header -->
  <%= render 'welcome/header' %>

  <div class="panel panel-success">
      <div class="panel-heading"><h1>Listing articles</h1></div>
      <div class="panel-body">
      <div class="container">
         <%= link_to 'New article', new_article_path, class: 'btn btn-success btn-lg'%>
      </div>

      <br>
 
  <% @articles.each do |article| %>
    <div class="container">
      <div class="panel panel-primary">
            <div class="panel-heading">
              <h3><%= article.title %></h3>
            </div>
            <div class="panel-body">
              <%= article.text %><br>
              <%= link_to 'Show', article_path(article), class: 'btn btn-info'%>
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
              <%= link_to 'Destroy', article_path(article),
                            method: :delete,
                            data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>        

            </div>
          </div>
    </div>
  <%end%>
  <div class="container">
    <%= link_to 'HOME', new_article_path, class: 'btn btn-primary btn-md', controller: 'welcome'%>    
    <br>
  </div>



      </div>
    </div

